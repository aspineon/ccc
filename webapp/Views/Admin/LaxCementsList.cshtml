@model IEnumerable<IGrouping<string, webapp.Models.ViewModels.CementViewModel>>

@{
    ViewBag.Title = "Cementy luz";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                @Html.ActionLink("Dodaj cement luz", "AddLaxCement", "Admin", new { @class = "btn btn-default" })
            </div>
            <div class="col-md-3"></div>
        </div>
        <div class="row">
            <h3 class="text-center">Cementy luz</h3>
        </div>
        @foreach(var group in Model)
        {
            <div class="panel">
                <div class="panel-heading">
                    <h4>@group.Key</h4>
                </div>
                <div class="panel-body">
                    <table class="table">
                        @foreach (var item in group)
                        {
                            <tr>
                                <td>@item.Name</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        }
    </div>
</div>