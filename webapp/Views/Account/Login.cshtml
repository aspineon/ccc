@model webapp.Models.Login
<div class="col-md-4"></div>
<div class="content-center col-md-4">
    <h2>Logowanie</h2>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.ValidationMessageFor(model => model.UserName)
            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Login" })<br />
            @Html.ValidationMessageFor(model => model.Password)
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Hasło" })<br />
            @Html.CheckBoxFor(model => model.RememberMe)
            @Html.LabelFor(model => model.RememberMe)
            <input type="submit" value="Zaloguj" class="btn btn-primary btn-block" />
        </div>
    }
</div>
<div class="col-md-4"></div>
